<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/specialityFragment">

    <fragment
        android:id="@+id/specialityFragment"
        android:name="com.example.todoapplication.presentation.ui.speciality.SpecialityFragment"
        tools:layout="@layout/fragment_specialty_list">
        <action
            android:id="@+id/actionSpecialityFragmentToEmployeeSpecialty"
            app:destination="@id/employeeSpecialtyFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/employeeSpecialtyFragment"
        android:name="com.example.todoapplication.presentation.ui.employee_specialty.EmployeeSpecialtyFragment"
        tools:layout="@layout/fragment_specialty_list">
        <action
            android:id="@+id/actionEmployeeBySpecialtyToEmployeeDetails"
            app:destination="@id/employeeDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/employeeDetailsFragment"
        android:name="com.example.todoapplication.presentation.ui.employee_specialty.EmployeeDetailsFragment"
        tools:layout="@layout/fragment_employee_details">
    </fragment>
</navigation>