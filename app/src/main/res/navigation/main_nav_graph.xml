<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/imagesFragment">

    <fragment
        android:id="@+id/imagesFragment"
        android:name="com.example.todoapplication.presentation.ui.images.ImagesFragment"
        tools:layout="@layout/fragment_images_list">
        <action
            android:id="@+id/actionImagesFragmentToImagesDetails"
            app:destination="@id/imageDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/imageDetailsFragment"
        android:name="com.example.todoapplication.presentation.ui.image_details.ImageDetailsFragment"
        tools:layout="@layout/fragment_image_details">
    </fragment>
</navigation>