<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageVievAvatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEmployeeFirstNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="Имя: "
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/imageVievAvatar"
        app:layout_constraintTop_toTopOf="@+id/imageVievAvatar" />

    <TextView
        android:id="@+id/textViewEmployeeFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/app_name"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@+id/textViewEmployeeFirstNameLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewEmployeeFirstNameLabel" />

    <TextView
        android:id="@+id/textViewEmployeeSecondNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Фамилия: "
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/textViewEmployeeFirstNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmployeeFirstNameLabel" />

    <TextView
        android:id="@+id/textViewEmployeeSecondName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/app_name"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEmployeeSecondNameLabel"
        app:layout_constraintStart_toEndOf="@+id/textViewEmployeeSecondNameLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewEmployeeSecondNameLabel" />

    <TextView
        android:id="@+id/textViewEmployeeAgeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Возраст: "
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/textViewEmployeeSecondNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmployeeSecondNameLabel" />

    <TextView
        android:id="@+id/textViewEmployeeAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="(25)"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/textViewEmployeeAgeLabel"
        app:layout_constraintStart_toEndOf="@+id/textViewEmployeeAgeLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewEmployeeAgeLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>